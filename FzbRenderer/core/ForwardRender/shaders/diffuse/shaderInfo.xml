<ShaderInfo>
	<Properties>
		<property name = "albedoMap" type = "texture"/>
		<property name = "normalMap" type = "texture"/>
		<property name = "albedo" type = "rgba" value = "1.0, 1.0, 1.0, 1.0"/>
	</Properties>
	<Macros>	<!--规定宏必须是use + 属性名-->
		<macro name = "useVertexNormal" usability = "true" />
		<macro name = "useVertexTexCoords" usability = "true" />
		<macro name = "useVertexTangent" usability = "false" />
		
		<macro name = "useTextureProperty" usability = "false" />
		<macro name = "useNumberProperty" usability = "false" />
		<macro name = "useAlbedoMap" usability = "false" />
		<macro name = "useAlbedo" usability = "false" />
		<macro name = "useNormalMap" usability = "false" />
		
		<macro name = "useFaceNormal" usability = "false" />
		<macro name = "useAreaLight" usability = "false" />
	</Macros>
	<Shaders>
		<shader name = "vertexShader" path = "vertex.glsl" />
		<shader name = "fragmentShader" path = "fragment.glsl" />
	</Shaders>
	<Pipeline>
		<dynamicStateInfo>
			<dynamicView />
		</dynamicStateInfo>
	</Pipeline>
</ShaderInfo>
