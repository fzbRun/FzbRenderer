<ShaderInfo>
	<Properties>
	</Properties>
	<Macros>
		<!--规定宏必须是use + 属性名-->
		<macro name = "useVertexNormal" usability = "true" />
		<macro name = "useVertexTexCoords" usability = "false" />
		<macro name = "useVertexTangent" usability = "false" />

		<macro name = "useTextureProperty" usability = "false" />
		<macro name = "useNumberProperty" usability = "false" />
		<macro name = "useAlbedoMap" usability = "false" />
		<macro name = "useAlbedo" usability = "false" />
		<macro name = "useNormalMap" usability = "false" />

		<macro name = "useFaceNormal" usability = "false" />
		<macro name = "useAreaLight" usability = "false" />
	</Macros>
	<Shaders>
		<shaderVersion value = "450" />
		<shader name = "vertexShader" path = "voxelVert.glsl" />
		<shader name = "fragmentShader" path = "voxelFrag.glsl" />
	</Shaders>
	<Pipeline>
		<rasterizerInfo>
			<cullMode value = "VK_CULL_MODE_NONE" />
		</rasterizerInfo>
		<depthStencilInfo>
			<depthTestEnable value="false" />
			<depthWriteEnable value="false" />
		</depthStencilInfo>
		<viewportStateInfo>
			<resolution width = "512" height = "512" />
			<viewport x = "0" y = "0" width = "512" height = "512"/>
			<viewport x = "0" y = "0" width = "512" height = "512"/>
			<viewport x = "0" y = "0" width = "512" height = "512"/>
			<scissor offset = "0, 0" extent = "512, 512" />
			<scissor offset = "0, 0" extent = "512, 512" />
			<scissor offset = "0, 0" extent = "512, 512" />
			<viewportExtensions value = "swizzle">
				<!--这里一定要注意vulkan会将y倒置，所以需要考虑这一点-->
				<swizzles x = "0" y = "1" z = "3" w = "3" />
				<swizzles x = "6" y = "1" z = "3" w = "3" />
				<swizzles x = "0" y = "2" z = "3" w = "3" />
			</viewportExtensions>
		</viewportStateInfo>
	</Pipeline>
</ShaderInfo>